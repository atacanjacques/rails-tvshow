<h1>Liste des Genres</h1>

<% if @genres.any? %>

<%= will_paginate @genres, renderer: BootstrapPagination::Rails %>

<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>Nom</td>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %></td>
      <td><%= genre.name %></td>
      <td><%= link_to 'Afficher', genre, class: 'btn btn-primary' %></td>
      <td><%= link_to 'Modifier', edit_genre_path(genre), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Supprimer', genre,
      method: :delete,
      data: {confirm: 'Etes-vous sÃ»r de vouloir supprimer ce genre ?'},
      class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Il n'y a pas encore de Genre.</p>
<% end %>

<p>
  <%= link_to 'Ajouter un Genre', new_genre_path, class: 'btn btn-success' %>
</p>